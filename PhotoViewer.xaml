<Window x:Class="PhotoViewerDemo.PhotoViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoViewerDemo"
        mc:Ignorable="d"
        Loaded="WindowLoaded"
        Title="PhotoViewer" Height="600" Width="600">
    <Grid Margin="10" Name="PhotoViewerLayout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Blur drop shadow under photo -->
        <Border Grid.Column="0" Grid.Row="0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                CornerRadius="4" Background="#44000000">
            <Border.RenderTransform>
                <TranslateTransform X="5" Y="5" />
            </Border.RenderTransform>
            <Border.BitmapEffect>
                <BlurBitmapEffect Radius="8" />
            </Border.BitmapEffect>
        </Border>

        <!-- Photo -->
        <Border Grid.Column="0" Grid.Row="0" Padding="4" Margin="4"
                Background="White" BorderBrush="#22000000" BorderThickness="1">
            <Image Name="ViewedPhoto" />
        </Border>

        <!-- Tools -->
        <Border Grid.Column="0" Grid.Row="1" Padding="4">
            <StackPanel Orientation="Horizontal">
                
                <Button Click="Crop" Content="Crop" />
                <Button Click="Rotate" Content="Rotate" />
                <Button Click="BlackAndWhite" Content="BlackAndWhite" />

                <Label Name="ViewedCaptionWidth" HorizontalAlignment="Left" />
                <Label Name="ViewedCaptionHeight" HorizontalAlignment="Left" />
                
            </StackPanel>
        </Border>
    </Grid>
</Window>